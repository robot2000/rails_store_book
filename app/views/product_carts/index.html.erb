<p id="notice"><%= notice %></p>

<h1>Listing Product Carts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_carts.each do |product_cart| %>
      <tr>
        <td><%= product_cart.product %></td>
        <td><%= product_cart.cart %></td>
        <td><%= link_to 'Show', product_cart %></td>
        <td><%= link_to 'Edit', edit_product_cart_path(product_cart) %></td>
        <td><%= link_to 'Destroy', product_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

